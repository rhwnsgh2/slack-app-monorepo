# Build the docker image with `npx nx docker-build catchup`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t catchup`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system catchup && \
          adduser --system -G catchup catchup

COPY ./dist/apps/catchup catchup
COPY .env catchup/.env

RUN chown -R catchup:catchup .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix catchup --omit=dev -f install

WORKDIR /app/catchup

CMD [ "node", "main.js"]
