# Build the docker image with `npx nx docker-build crawler`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t crawler`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system crawler && \
          adduser --system -G crawler crawler

COPY dist/apps/crawler crawler
RUN chown -R crawler:crawler .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix crawler --omit=dev -f install

CMD [ "node", "crawler" ]
